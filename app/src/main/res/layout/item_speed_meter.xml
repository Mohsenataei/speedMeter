<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_speed_meter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/speedo1"
            android:id="@+id/imgSpeedMeter"
            android:padding="@dimen/space_3"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imgSpeedMeter"
            app:layout_constraintLeft_toLeftOf="@id/imgSpeedMeter"
            app:layout_constraintRight_toRightOf="@id/imgSpeedMeter"
            app:layout_constraintBottom_toBottomOf="@id/imgSpeedMeter"
            android:id="@+id/txtLiveSpeed"
            android:textSize="48dp"
            android:textColor="@android:color/white"
            style="@style/TextView.white.speed"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>