<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:buttonStyle">@style/Button</item>

        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:layoutDirection"
            tools:targetApi="JELLY_BEAN_MR1">ltr</item>
    </style>
    <style name="MyDialogSlideHorizontalAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="selectLanStyle">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>



    <style name="TextView">
        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/space_0.5</item>
    </style>

    <style name="TextView.white">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TextView.white.speed">
        <item name="fontFamily">@font/digit_font_family</item>
    </style>
    <style name="TextView.white.bold">
        <item name="fontFamily">@font/main_font_family</item>
    </style>
    <style name="EditText">
        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/space_0.5</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation" tools:targetApi="LOLLIPOP">@dimen/space_0.5</item>
    </style>

    <style name="Button.lightText">
        <item name="fontFamily">@font/main_font_family</item>
        <item name="android:textColor">#464646</item>
        <item name="android:paddingRight">@dimen/space_4</item>
        <item name="android:paddingLeft">@dimen/space_4</item>
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_1</item>
        <item name="android:background">@drawable/rec_button</item>

    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="fontFamily">@font/main_font_family</item>
    </style>

    <style name="TabLayoutTextAppearance.HealthTab" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>



    <style name="TextView.ItemContentTitle">
        <item name="fontFamily">@font/bold_font_family</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextView.ItemContentDescription">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.ItemContentTitle.VideoTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.ItemContentTitle.SoundTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontFamily">@font/main_font_family</item>
    </style>

    <style name="BMISeekBar">
        <item name="android:indeterminateOnly">false</item>

    </style>
    <style name="RTLToolbar">
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_toolbar</item>
    </style>

    <style name="Bold">
        <item name="fontFamily">@font/bold_font_family</item>
    </style>

    <style name="EarthquakeNormalText">
        <item name="android:textColor">@color/earthquakeSecondaryColor</item>
    </style>

</resources>
